<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343535"
    tools:context=".Dashboard.ProfileActivity">

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:elevation="@dimen/_10sdp"
        android:src="@drawable/cancel_ico"
        app:layout_constraintHorizontal_bias=".8"
        app:layout_constraintBottom_toBottomOf="@+id/textView222"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView222"
        app:layout_constraintTop_toTopOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/user_profile_dp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:elevation="@dimen/_2sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/dp_2"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="#333333"
        app:riv_border_width="@dimen/_1sdp"
        app:riv_corner_radius="@dimen/_8sdp"
        app:riv_mutate_background="true" />

    <TextView
        android:id="@+id/user_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/lemon_milk_light"
        android:text="Meesum Raza"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/user_profile_dp"
        app:layout_constraintStart_toStartOf="@+id/user_profile_dp"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_dp" />

    <TextView
        android:id="@+id/user_profile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/lemon_milk_light"
        android:text="+923345606564"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/user_profile_name"
        app:layout_constraintStart_toStartOf="@+id/user_profile_name"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_name" />

    <Button
        android:id="@+id/profile_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_26sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/button_stroke_profile"
        android:fontFamily="@font/montserrat_light"
        android:padding="@dimen/_10sdp"
        android:text="Edit Profile"
        android:textColor="@color/white"
        android:elevation="@dimen/_10sdp"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_number" />

    <Button
        android:id="@+id/profile_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/button_stroke_profile"
        android:fontFamily="@font/montserrat_light"
        android:padding="@dimen/_10sdp"
        android:visibility="gone"
        android:text="History"
        android:textColor="@color/white"
        android:elevation="@dimen/_10sdp"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit" />


    <Button
        android:id="@+id/sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:background="@drawable/button_round"
        android:backgroundTint="#BF1322"
        android:elevation="@dimen/_3sdp"
        android:fontFamily="@font/lemon_milk_regular"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:text="Sign Out"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@+id/profile_history"
        app:layout_constraintStart_toStartOf="@+id/profile_history"
        app:layout_constraintTop_toBottomOf="@+id/profile_history" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:elevation="@dimen/_3sdp"
        android:fontFamily="@font/lovecraft"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_24sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.85" />


    <TextView
        android:id="@+id/textView222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:elevation="@dimen/_3sdp"
        android:fontFamily="@font/lovecraft"
        android:textAllCaps="false"
        android:text="Your Profile"
        android:textColor="@color/white"
        android:textSize="@dimen/_24sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintVertical_bias="0.85" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:elevation="@dimen/_3sdp"
        android:fontFamily="@font/montserrat_light"
        android:text="EMOTION BASED DIALER"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:background="@drawable/waveinvert"
        android:backgroundTint="@color/appOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>