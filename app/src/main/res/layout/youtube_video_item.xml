<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:layout_margin="@dimen/_4sdp"
    android:background="@drawable/button_round_bg"
    android:backgroundTint="@color/appBlack">

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="0dp"
        android:layout_marginLeft="-3dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:ellipsize="end"
        android:fontFamily="@font/lemon_milk_light"
        android:maxLines="3"
        app:layout_constraintVertical_bias="0"
        android:text="Testing"
        android:textColor="@color/matteBlack"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/video_thumbnail"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/video_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:ellipsize="end"
        android:fontFamily="@font/lemon_milk_light"
        android:maxLength="50"
        android:maxLines="3"
        android:text="Desc"
        android:textColor="#838383"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@id/video_title"
        app:layout_constraintStart_toStartOf="@id/video_title"
        app:layout_constraintTop_toBottomOf="@id/video_title" />

    <TextView
        android:id="@+id/video_starring"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:ellipsize="end"
        android:fontFamily="@font/lemon_milk_regular"
        android:maxLength="50"
        android:maxLines="3"
        android:text="Desc"
        android:textColor="#838383"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@id/video_genre"
        app:layout_constraintStart_toStartOf="@id/video_genre"
        app:layout_constraintTop_toBottomOf="@id/video_genre" />

    <ImageView
        android:id="@+id/rat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="@id/video_starring"
        app:layout_constraintTop_toBottomOf="@id/video_starring" />

    <TextView
        android:id="@+id/video_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:maxLength="50"
        android:maxLines="3"
        android:text="Desc"
        android:textColor="#838383"
        android:layout_marginStart="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rat"
        app:layout_constraintTop_toTopOf="@+id/rat"
        app:layout_constraintBottom_toBottomOf="@+id/rat"/>


</androidx.constraintlayout.widget.ConstraintLayout>